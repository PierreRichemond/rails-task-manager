<div class="container">
<h1><%= @task.title %></h1>
  <div class="d-flex m-2">

    <% if @task.completed == false %>
      <p><i class="far fa-square"></i></p>
    <% else %>
      <p><i class="far fa-check-square"></i></p>
    <% end %>
    <p><%= @task.details %></p>
  </div>

  <h2><%= link_to 'Back to tasks', tasks_path %></h2>
</div>
